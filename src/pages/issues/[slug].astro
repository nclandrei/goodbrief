---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const issues = await getCollection('issues');
  return issues.map((issue) => ({
    params: { slug: issue.id },
    props: { issue },
  }));
}

interface Props {
  issue: CollectionEntry<'issues'>;
}

const { issue } = Astro.props;
const { Content } = await render(issue);

const formattedDate = issue.data.date.toLocaleDateString('ro-RO', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={issue.data.title} description={issue.data.summary}>
  <article class="py-16">
    <div class="max-w-3xl mx-auto px-4">
      <header class="mb-8">
        <a 
          href="/issues" 
          class="text-primary-600 text-sm font-medium hover:underline mb-4 inline-block"
        >
          ← Înapoi la arhivă
        </a>
        
        <time class="block text-gray-500 text-sm mb-2">{formattedDate}</time>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900">
          {issue.data.title}
        </h1>
        <p class="text-xl text-gray-600 mt-4">
          {issue.data.summary}
        </p>
      </header>

      <div class="prose prose-lg">
        <Content />
      </div>

      <footer class="mt-12 pt-8 border-t border-gray-100">
        <p class="text-gray-600 mb-4">
          Ți-a plăcut această ediție? Abonează-te pentru a primi vești bune în fiecare luni!
        </p>
        <a 
          href="/#subscribe" 
          class="inline-block px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
        >
          Abonează-te gratuit
        </a>
      </footer>
    </div>
  </article>
</BaseLayout>
