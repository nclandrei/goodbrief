---
import { formatDateLong } from '../utils/date';

interface Props {
  title: string;
  date: Date;
  summary: string;
  id: string;
}

const { title, date, summary, id } = Astro.props;

const formattedDate = formatDateLong(date);
---

<article class="py-6 border-b border-charcoal/10">
  <a href={`/issues/${id}`} class="block group">
    <time class="text-xs text-gray-500 uppercase tracking-wider">{formattedDate}</time>
    <h3 class="font-serif text-xl font-semibold text-gray-900 mt-2 group-hover:text-coral-600 transition-colors">
      {title}
    </h3>
    <p class="text-gray-600 mt-3 line-clamp-2">
      {summary}
    </p>
    <span class="inline-flex items-center text-primary-600 text-sm font-medium mt-4 group-hover:text-coral-600 transition-colors">
      Citește mai mult →
    </span>
  </a>
</article>
