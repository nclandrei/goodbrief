---
const navLinks = [
  { href: '/', label: 'Acasă' },
  { href: '/issues', label: 'Arhivă' },
  { href: '/about', label: 'Despre' },
  { href: '/support', label: 'Susține-ne' },
];
---

<header class="border-b border-gray-100">
  <nav class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="text-xl font-bold text-primary-600 hover:text-primary-700 transition-colors">
      Good Brief
    </a>
    
    <ul class="flex items-center gap-6">
      {navLinks.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="text-gray-600 hover:text-primary-600 transition-colors text-sm font-medium"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
